  priority    Priority @default(MEDIUM)
  impact      String?

  status        RecommendationStatus @default(PENDING)
  acceptedAt    DateTime?            @map("accepted_at")
  dismissedAt   DateTime?            @map("dismissed_at")
  acceptedById  String?              @map("accepted_by_id")
