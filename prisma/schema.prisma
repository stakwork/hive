// =============================================
// ROADMAP FEATURES
// =============================================

model Feature {
  id          String           @id @default(cuid())
  title       String
  brief       String?
  requirements String?
  architecture String?
  personas    String[]         @default([])
  workspaceId String           @map("workspace_id")
  workspace   Workspace        @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  // Assignee/Lead
  assigneeId  String?          @map("assignee_id")
  assignee    User?            @relation("FeatureAssignee", fields: [assigneeId], references: [id], onDelete: SetNull)

  // Diagram fields
  diagramUrl   String?         @map("diagram_url")
  diagramS3Key String?         @map("diagram_s3_key")

  status      FeatureStatus    @default(BACKLOG)
  priority    FeaturePriority  @default(LOW)

  // Audit fields
  createdById String           @map("created_by_id")
  createdBy   User             @relation("FeatureCreator", fields: [createdById], references: [id])
  updatedById String           @map("updated_by_id")
  updatedBy   User             @relation("FeatureUpdater", fields: [updatedById], references: [id])

  // Relationships
  userStories  UserStory[]
  phases       Phase[]
  tasks        Task[]
  stakworkRuns StakworkRun[]

  deleted     Boolean          @default(false)
  deletedAt   DateTime?        @map("deleted_at")
  createdAt   DateTime         @default(now()) @map("created_at")
  updatedAt   DateTime         @updatedAt @map("updated_at")

  @@index([workspaceId])
  @@index([assigneeId])
  @@index([status])
  @@index([deleted])
  @@map("features")
}

enum FeatureStatus {
  BACKLOG
  PLANNED
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

enum FeaturePriority {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

model UserStory {
  id          String   @id @default(cuid())
  featureId   String   @map("feature_id")
  feature     Feature  @relation(fields: [featureId], references: [id], onDelete: Cascade)

  title       String
  order       Int      @default(0)
  completed   Boolean  @default(false)

  // Audit fields
  createdById String   @map("created_by_id")
  createdBy   User     @relation("UserStoryCreator", fields: [createdById], references: [id])
  updatedById String   @map("updated_by_id")
  updatedBy   User     @relation("UserStoryUpdater", fields: [updatedById], references: [id])

  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@index([featureId])
  @@index([order])
  @@map("user_stories")
}

model Phase {
  id          String      @id @default(cuid())
  featureId   String      @map("feature_id")
  name        String
  description String?
  status      PhaseStatus @default(NOT_STARTED)
  order       Int         @default(0)

  // Relationships
  feature Feature @relation(fields: [featureId], references: [id], onDelete: Cascade)
  tasks   Task[]

  deleted   Boolean   @default(false)
  deletedAt DateTime? @map("deleted_at")
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")

  @@index([featureId])
  @@index([status])
  @@index([order])
  @@index([deleted])
  @@map("phases")
}

// =============================================
// STAKWORK AI GENERATION RUNS
// =============================================

model StakworkRun {
  id          String   @id @default(cuid())
  webhookUrl  String   @map("webhook_url")
  projectId   Int?     @map("project_id") // Stakwork project ID
  type        StakworkRunType
  featureId   String?  @map("feature_id")
  feature     Feature? @relation(fields: [featureId], references: [id], onDelete: SetNull)
  workspaceId String   @map("workspace_id")
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  status      WorkflowStatus @default(PENDING)
  result      String?        // Stores the actual result
  dataType    String         @default("string") @map("data_type") // "string", "json", "number", etc.
  feedback    String?        // User feedback on result
  decision    StakworkRunDecision? // User decision on result

  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@index([workspaceId])
  @@index([featureId])
  @@index([type])
  @@index([status])
  @@index([projectId])
  @@index([createdAt])
  @@map("stakwork_runs")
}

enum StakworkRunType {
  ARCHITECTURE
  TASK_GENERATION
  USER_STORIES
  REQUIREMENTS
  POD_REPAIR
  POD_LAUNCH_FAILURE
}

enum StakworkRunDecision {
  ACCEPTED
  REJECTED
  FEEDBACK
}

// =============================================
// SCREENSHOTS
// =============================================

model Screenshot {
  id          String    @id @default(cuid())
  workspaceId String    @map("workspace_id")
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  taskId      String?   @map("task_id")
  task        Task?     @relation(fields: [taskId], references: [id], onDelete: SetNull)

  // S3 Storage
  s3Key       String    @unique @map("s3_key") // screenshots/{workspaceId}/{hash}.jpg
  s3Url       String?   @map("s3_url") // Cached presigned download URL
  urlExpiresAt DateTime? @map("url_expires_at") // When cached URL expires

  // Metadata for context & comparison
  actionIndex Int       @map("action_index") // Position in test sequence
  pageUrl     String    @map("page_url") // URL where screenshot was taken
  timestamp   BigInt    // Capture time (Unix timestamp in milliseconds)
  hash        String    @unique // Content hash for deduplication (SHA-256 truncated to 12 chars)

  // Image dimensions
  width       Int?
  height      Int?

  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  @@index([workspaceId])
  @@index([taskId])
  @@index([hash])
  @@index([pageUrl])
  @@index([createdAt])
  @@map("screenshots")
}

