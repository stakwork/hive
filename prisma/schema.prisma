  // Optional link to feature
  featureId String?  @unique @map("feature_id")
  feature   Feature? @relation(fields: [featureId], references: [id], onDelete: SetNull)

  // Excalidraw data stored as JSON
  elements Json @default("[]")
  appState Json @default("{}") @map("app_state")
  files    Json @default("{}")

  // Collaboration versioning for conflict resolution
  version Int @default(0)

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([workspaceId])
  @@index([createdAt])
  @@map("whiteboards")
}

